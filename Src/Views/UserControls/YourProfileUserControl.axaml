<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
			 Width="300"
             x:Class="H2PD071123_Grp2_AutoAuction.Views.YourProfileUserControl">
	<Grid Margin="20" RowDefinitions="*,auto,auto,2*,auto,2*,*" ColumnDefinitions="auto,*">
		<Label Grid.ColumnSpan="2"  FontSize="26">Your profile</Label>
		<Label Margin="0 0 20 20" Grid.Row="1" >Username:</Label>
		<Label Grid.Row="1" Grid.Column="1">Bind UserName her</Label>
		<Label Margin="0 0 20 20" Grid.Row="2" >Password:</Label>
		<Button Grid.Row="2" Margin="-10 -2 0 0" Grid.Column="1" Foreground="Blue" Background="Transparent" TextBlock.TextAlignment="Center" VerticalAlignment="Top">Change Password</Button>
		<Label  Margin="0 0 20 20" Grid.Row="3" >Balance:</Label>
		<Label Grid.Row="3" Grid.Column="1">Bind Balance her</Label>
		<Label  Margin="0 0 20 20" Grid.Row="4" >Your auction:</Label>
		<Label Grid.Row="4" Grid.Column="1">Bind YourAuction her</Label>
		<Label  Margin="0 0 20 20" Grid.Row="5" >Auction won:</Label>
		<Label Grid.Row="5" Grid.Column="1">Bind Auction her</Label>
		<Button Grid.Row="6">Back</Button>
	</Grid>
</UserControl>
