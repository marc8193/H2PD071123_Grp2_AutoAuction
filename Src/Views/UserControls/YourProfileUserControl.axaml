<UserControl xmlns="https://github.com/avaloniaui"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="450"
	xmlns:uc="clr-namespace:H2PD071123_Grp2_AutoAuction.Views"
	xmlns:dc="clr-namespace:H2PD071123_Grp2_AutoAuction.ViewModels"
	Width="300"
	x:Class="H2PD071123_Grp2_AutoAuction.Views.YourProfileUserControl"
	x:DataType="dc:YourProfileUserControlViewModel"
	x:CompileBindings="True">


	<Grid Margin="20" RowDefinitions="*,auto,auto,2*,auto,2*,*" ColumnDefinitions="auto,*">
		<Label Grid.ColumnSpan="2" FontSize="26">Your profile</Label>
		<Label Margin="0 0 20 20" Grid.Row="1">Username:</Label>
		<Label Grid.Row="1" Grid.Column="1" Content="{Binding Username}" />

		<Label Margin="0 0 20 20" Grid.Row="3">Balance:</Label>
		<Label Grid.Row="3" Grid.Column="1" Content="{Binding Balance}" />
		<Button Name="BackBTN" Click="BackBtn" Grid.Row="6">Back</Button>
	</Grid>
</UserControl>